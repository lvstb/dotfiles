#All the dig info
function digga() {
		    dig +nocmd "$1" any +multiline +noall +answer
	    }
#print file size
function fs() {
	    if du -b /dev/null > /dev/null 2>&1; then
		    local arg=-sbh
	    else
		    local arg=-sh
	    fi
    	    if [[ -n "$@" ]]; then
	       du $arg -- "$@"
	    else
               du $arg .[^.]* *
            fi
       }
