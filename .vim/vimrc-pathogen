"Pathogen
    execute pathogen#infect()
"Theme and colors
    colorscheme solarized

filetype plugin indent on
syntax on           "enable syntax processing
set clipboard=unnamed
"syntax enable		"enable syntax processing"
set softtabstop=4	"number of spaces in TAB when editing "
set tabstop=4		"number of visual spaces per TAB"
set expandtab		"tabs are spaces"
set number          "show line numbers"
set showcmd         "show commmand in bottom bar"
set cursorline      "highligt current line "
"filetype indent on  "load filetype-specific indent files
set wildmenu        "visual autocomplete for command menu
set lazyredraw      "redraw only when we need to
set showmatch       "highlight matching ((({[]})))
set incsearch       "search as characters are entered
set hlsearch        "highlight matches
nnoremap <leader><space> :nohlsearch <CR>       "turn off search highlight
set foldenable      "enable folding
set foldlevelstart=10   "open most folds bij default
set foldnestmax=10  "10 nested fold max
nnoremap <space> za "space open/close folds
set foldmethod=indent   "fold based on indent level
let mapleader=","   "leader is comma
inoremap jk <esc>   "remap escape to jk
nnoremap <leader>u :GundoToggle<CR>
set backup
set backupdir=~/.vim-tmp,~/.tmp,~/tmp,var/tmp,/tmp
set backupskip=/tmp/*,/private/tmp/*
set directory=~/.vim-tmp,~.tmp;~/tmp,/var/tmp,/tmp
set writebackup
set backspace=indent,eol,start
command W w !sudo tee % > /dev/null     ":W saves the file, useful for handling the permissiond denied error
set ignorecase      "ignore case when searching
set smartcase       "try to be smart when searching
set magic           "for regular expressions
set foldcolumn=1     "add a bit extra margin to the left
set laststatus=2    "alwas show the status line
set statusline=\ %{HasPaste()}%F%m%r%h\ %w\ \ CWD:\ %r%{getcwd()}%h\ \ \ Line:\ %l\ \ Column:\ %c
hi htmlArg gui=italic
hi Comment gui=italic
hi Type    gui=italic
hi htmlArg cterm=italic
hi Comment cterm=italic
hi Type    cterm=italic
" Returns true if paste mode is enabled
function! HasPaste()
            if &paste
                            return 'PASTE MODE  '
                                endif
                                    return ''
                            endfunction
